    <TextView
        android:id="@+id/text_hr_ref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:text="00"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@+id/textView16"
        app:layout_constraintStart_toEndOf="@+id/textView22" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/unit_bp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_sbp_app"
        app:layout_constraintStart_toEndOf="@+id/text_sbp_app" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/unit_bp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_dbp_app"
